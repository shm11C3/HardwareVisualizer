    "resources": [],
    "shortDescription": "",
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "productName": "HardwareVisualizer",
  "mainBinaryName": "hardware-visualizer",
  "version": "0.6.2-beta.1",
  "identifier": "HardwareVisualizer",
  "plugins": {
    "sql": {
      "preload": ["sqlite:hv-database.db"]
    }
  },
  "app": {
    "windows": [
      {
        "resizable": true,
        "title": "HardwareVisualizer",
        "decorations": true
      }
